<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/startRemoteService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动RemoteService"/>

    <Button
        android:id="@+id/stopRemoteService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startRemoteService"
        android:text="关闭RemoteService"/>

    <Button
        android:id="@+id/bindRemoteService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stopRemoteService"
        android:text="绑定RemoteService" />

    <Button
        android:id="@+id/unbindRemoteService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bindRemoteService"
        android:text="解绑RemoteService" />

</RelativeLayout>
